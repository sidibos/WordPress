<phpunit
	bootstrap="../vendor/autoload.php"
	colors="false"
	convertErrorsToExceptions="true"
	convertNoticesToExceptions="true"
	convertWarningsToExceptions="true"
	processIsolation="false"
	stopOnError="false"
	stopOnFailure="false"
	stopOnIncomplete="false"
	stopOnSkipped="false"
	syntaxCheck="true"
	verbose="true">
	<logging>
		<log type="junit" target="../build/logs/phpunit.xml" />
		<log type="coverage-clover" target="../build/logs/coverage/clover.xml" />
		<log type="coverage-html" target="../build/logs/coverage/" charset="UTF-8" />
	</logging>
	<php>
		<includePath>.</includePath>
		<ini name="memory_limit" value="512M" />
		<ini name="error_log" value="../build/logs/error.log" />
		<server name="IS_DEV" value="1"/>
	</php>
	<testsuites>
		<testsuite name="Assanka Exception Tests">
			<file>ExceptionTest.php</file>
		</testsuite>
		<testsuite name="Logger">
			<file>FileLoggerTest.php</file>
			<file>StdoutLoggerTest.php</file>
			<file>MultipleFileLoggersTest.php</file>
			<file>TraceTest.php</file>
            <file>PsrLoggerTest.php</file>
            <file>LogWriterTest.php</file>
            <file>LogHandlerTest.php</file>
            <file>LogFormatterTest.php</file>
			<file>LoggerTest.php</file>
			<file>LoggerErrorLogTest.php</file>
            <file>ErrorLogTest.php</file>
        </testsuite>
		<testsuite name="Abbreviate">
			<file>AbbreviateTest.php</file>
		</testsuite>
		<testsuite name="Logger Global">
			<file>LoggerGlobalTest.php</file>
		</testsuite>
	</testsuites>
	<filter>
		<whitelist processUncoveredFilesFromWhitelist="true">
		  <directory suffix=".php">../src</directory>
		</whitelist>
	</filter>
</phpunit>
