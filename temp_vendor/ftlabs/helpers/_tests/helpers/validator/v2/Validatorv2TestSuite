require_once $_SERVER['CORE_PATH'].'/helpers/validator/v2/validator';
class Validatorv2TestSuite extends PHPUnit_Framework_TestSuite {

	public static function suite() {
        $suite = new Validatorv2TestSuite();

		$dir = dirname(__FILE__);

		$suite->addTestFiles(array(
			$dir.'/checkFieldTest',
			$dir.'/normaliseTest'
		));

		return $suite;
    }

    protected function setUp() {
    }

    protected function tearDown() {
    }
}