require_once MOCK_DIR."MockSingleton";

class SingletonTest extends PHPUnit_Framework_TestCase {

	public function testGetInstanceReturnsSameObjectEachTime() {
		$obja = MockSingleton::getInstance();
		$objb = MockSingleton::getInstance();
		$this->assertSame($obja, $objb, "Different objects returned from getInstance()");
	}

}