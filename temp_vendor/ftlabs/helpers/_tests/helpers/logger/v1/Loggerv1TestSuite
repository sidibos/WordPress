require_once $_SERVER['CORE_PATH'].'/helpers/logger/v1/logger';

class Loggerv1TestSuite extends PHPUnit_Framework_TestSuite {

	public static function suite() {
        $suite = new Loggerv1TestSuite();

		$dir = dirname(__FILE__);

		$suite->addTestFiles(array(
			$dir.'/fileLoggerTest',
			$dir.'/loggerTest',
			$dir.'/stdoutLoggerTest',
			$dir.'/multipleFileLoggersTest',
			$dir.'/traceTest',
		));

		return $suite;
    }

    protected function setUp() {
    }

    protected function tearDown() {
    }
}
