require_once($_SERVER["DOCUMENT_ROOT"]."/lib/inc/global");
require_once("statsliblink");
if (!checkIfAuth("statistics", "", false, array("premium", "server"))) {
	outputPremiumGuideAndExit(&$page);
}

$start = date("M Y", mktime(0,0,0,substr($_GET["file"],4,2),1,substr($_GET["file"],0,4)));
$end = date("M Y", mktime(0,0,0,substr($_GET["file"],10,2),1,substr($_GET["file"],6,4)));
$paths = substr($_GET["file"],12,2);

$page->addAction("submit", "Delete", false, "if(confirm('Are you sure you want to delete this flowmap?')) window.location = 'delete?file=".$_GET["file"]."';");
$page->addAction("cancel", "Return to map index", "index");

$page->addContent("content", "<iframe src=\"viewimage?file=".$_GET["file"]."\" width=\"100%\" height=\"600\" frameborder=0 scrolling=\"yes\"></iframe>");
$page->addContent("context", $page->loadExternalContent("html/viewinfo"));
$page->addContent("context", "<p class=\"paddedcontent\">This data is for the period <strong>".$start."</strong> to <strong>".$end."</strong> and shows <strong>".$paths."</strong> paths.</p>");

$page->title = "Statistics - Viewing Flow Map for ".$start." - ".$end." (".$paths." paths)";
$page->render();
?>