<?php
require_once($_SERVER["CORE_PATH"]."/web/common/v1/Common");
?>

var otd = document.getElementById('frmsupportedit_password').parentNode;
var olink = document.createElement("a");
olink.style.cssText = "width: 15px; height: 14px; background: url(<?=$_SERVER["CORE_WEB_ALIAS"]?>/admin/v3/img/config/icon_suggest.png) no-repeat; display: block; position: absolute; top: 40px; left:490px";
olink.onclick = function (){doGeneratedPassword()};
olink.setAttribute("title", "Insert a suggested password");
olink.setAttribute("href", "javascript:void(0)");
otd.appendChild(olink);

function doGeneratedPassword() {
	document.getElementById('frmsupportedit_password').value = '<?=Common::generatepassword()?>';
	olink.blur();
}