<phpunit
	bootstrap="../vendor/autoload.php"
	colors="false"
	convertErrorsToExceptions="true"
	convertNoticesToExceptions="true"
	convertWarningsToExceptions="true"
	syntaxCheck="true"
	strict="false"
	verbose="true">

	<logging>
		<log type="junit" target="../build/logs/phpunit.xml" />
		<log type="coverage-clover" target="../build/logs/coverage/clover.xml" />
		<log type="coverage-html" target="../build/logs/coverage/" charset="UTF-8" />
	</logging>
	<php>
		<includePath>.</includePath>
		<server name="IS_DEV" value="1"/>
	</php>

	<filter>
		<whitelist>
			<directory suffix=".php">../</directory>
			<exclude>
				<directory>../vendor</directory>
				<directory>../build</directory>
			</exclude>
		</whitelist>
	</filter>

	<testsuites>
		<testsuite name="Exception Tests">
			<file>ExceptionTest.php</file>
		</testsuite>
	</testsuites>
</phpunit>
